   <h3 class="table-title">חלוקה לפי {{this.group_field_heb}}<i class="help-spot fa fa-question-circle"></i></h3>
   <table class="group-table table table-striped">
      <colgroup>
         <col>
         <col>
         <col>
         <col>
      </colgroup>
      <thead>
         <tr>
            <th>שם נכס</th>
            <th>היקף ההשקעה <small>בשקלים</small></th>
            <th>חשיפה <small>באחוזים</small></th>
            <th>שינוי חשיפה <small>4 רבעונים אחרונים</small></th>
         </tr>
      </thead>
      <tbody>
      	{{#result}}
         <tr>
            <td>
               <a onclick="addConstraint('instrument_name','חשב כללי א')" title="חשב כללי א" class="table-link">חשב כללי א</a>
