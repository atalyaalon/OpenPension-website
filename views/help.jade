extends layout

block content

  div(id="page-header" class="container-fluid")
    div(class="container")
      div(class="row")
        div(class="col-xs-12")
          ol(class="breadcrumb")
            li()
              a(onclick="window.location='/'" title="דף הבית") דף הבית
            li(class="active")הסברים
          h2()
          h1() הסברים

  div(class="static container")
    div(class="row")
      main(class="col-xs-8")
        each term in pensionTerms
          section(id="#{term.key.replace(/ /g, '_')}")
            h3() #{term.title}
            p() #{term.value}
      div(class="col-xs-4")
        ul(class="toc nav affix" data-spy="affix" data-offset-top="180")
          each term in pensionTerms
            li()
              a(href="##{term.key.replace(/ /g, '_')}") #{term.title}
