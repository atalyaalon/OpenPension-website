extends layout_v2

block headerbottom


block content

    div(id="page-header" class="container-fluid")

        div(class="container")

            div(class="row")

                //- HEADER
                div( class="col-xs-12")

                    div(id="breadcrumbs" class="breadcrumb col-xs-12")
                        include partials/breadcrumbs.jade


                    div(id="reportTitle" )
                        include partials/report_title.jade
                    

    div(class="container")
        div(class="row")
            div(class="col-xs-12")
                div(id="btn-bar")
                        select(id="select-quarter")
                            each quarter in lastQuarters
                                - var select=null;
                                - if (report_year == quarter.year && report_qurater == quarter.quarter)
                                    - select='selected';
                                option(value="#{JSON.stringify(quarter)}",
                                selected=select) רבעון #{quarter.quarter}, #{quarter.year}
                        a(id="download" href="/csv#{filter.toQueryString()}")
                            button(class="btn btn-default")
                                i(class="fa fa-file-text-o")
                                &nbspהורד נתונים גולמיים
                div(class="alert alert-warning" role="alert")
                    strong() שימו לב!
                    נתונים חלקיים
                    a(href="#") קרא עוד

                - if (debug)
                    div(style="text-align:left;direction:ltr") #{totalPensionFundQuery}
                    div(style="text-align:left;direction:ltr") #{quartersQuery}

                div(id="header")
                    include partials/header.jade

        div(id="groups")
            include partials/groups.jade

        div(class="row")
            div(id="further-reading" class="col-xs-12")
                h3(id = "link-list-title") עוד בפנסיה פתוחה
                div(id="funds")
                    include partials/funds.jade

        div(class="modal fade", id="myModal",tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")
            div(class="modal-dialog modal-lg")
                div(class="modal-content")


    -if (debug)
        <!-- DEGBUGGING -->
        script() var groups = !{JSON.stringify(groups)};
        script() var quarters = !{JSON.stringify(quarters)};
        script() var lastQuarters = !{JSON.stringify(lastQuarters)};
        script() var totalPensionFundQuarters = !{JSON.stringify(totalPensionFundQuarters)};
        script() var quartersQuery = !{JSON.stringify(quartersQuery)};
        script() var totalPensionFundQuery = !{JSON.stringify(totalPensionFundQuery)};
        script() var origGroups = !{JSON.stringify(origGroups)};
        script(type='text/javascript', src='/js/underscore-min.js')
    


    script() var filter = Filter.fromQueryString("!{filter.toQueryString()}");
    
    script() var translate = !{translate};
    script() var funds = !{JSON.stringify(funds)};    
    script() var fundsQuery = !{JSON.stringify(fundsQuery)};
    script() var debug = !{debug};
    script() var dictionary = !{JSON.stringify(dictionary)};
    script() var report_type = !{JSON.stringify(report_type)};
    script() var lastQuarters = !{JSON.stringify(lastQuarters)};
    script() var quarters = !{JSON.stringify(quarters)};
    script() var plurals = !{JSON.stringify(plurals)};
    script() var groups = !{JSON.stringify(groups)};


    script() var getReportType = !{getReportType};
    script() var createTitle = !{createTitle};


    script() var fundsTemplate = !{fundsTemplate};
    script() var groupsTemplate = !{groupsTemplate};
    script() var breadcrumbsTemplate = !{breadcrumbsTemplate};
    script() var reportTitleTemplate = !{reportTitleTemplate};
    script() var headerTemplate = !{headerTemplate};



    script(type='text/javascript', src='/js/portfolio_clientside.js')
    script(type='text/javascript', src='/js/common_clientside.js')
    script(type='text/javascript', src='/js/highcharts.js')

